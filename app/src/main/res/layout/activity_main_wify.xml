<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

<!--    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Need to turn on Wifi, GPS and grant all permissions when using"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone"/>-->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/file_share_1"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btnCheckPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="check permissions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"/>

    <Button
        android:id="@+id/btnSender"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/sender"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckPermission"/>

    <Button
        android:id="@+id/btnReceiver"
        android:layout_marginRight="50dp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/receiver"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckPermission" />

</androidx.constraintlayout.widget.ConstraintLayout>